<%= form_for @share do |s| %>
  <% if @share.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <strong><%= pluralize(@share.errors.count, "error") %> prohibited this share from being saved:</strong>
    <ul>
    <% @share.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="one column">
      <strong>Name</strong>
    </div>
    <div class="four columns">
      <%= s.text_field :name,
        :placeholder => :name,
        :required => 'true',
        :class => 'u-full-width' %>
    </div>
  </div>

  <div class="row">
    <div class="one column">
      <strong>Path</strong>
    </div>
    <div class="four columns">
      <%= s.text_field :path,
        :placeholder => :path,
        :required => 'true',
        :class => 'u-full-width' %>
    </div>
  </div>

  <div class="row">
    <div class="one column">
      <strong>Quotum (bytes)</strong>
    </div>
    <div class="four columns">
      <%= s.number_field :quotum,
        :placeholder => :quotum,
        :required => 'true',
        :class => 'u-full-width' %>
    </div>
  </div>

  <div class="row">
    <%= s.submit 'Save',
            :class => "btn btn-success" %>
  </div>
<% end %>
