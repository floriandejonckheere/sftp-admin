<h4>Dashboard</h4>

<hr>

<div class="row">
  <div class="four columns">
    <div class="info-panel info-panel-color-1">
      <div class="info-panel-body">
        <h2><%= User.all.count %></h2> <h5><%= 'user'.pluralize(User.all.count) %></h5>
      </div>
      <div class="info-panel-actions">
        <%= link_to 'Details &raquo;'.html_safe, users_path, :class => 'white-text' %>
      </div>
    </div>
  </div>

  <div class="four columns">
    <div class="info-panel info-panel-color-2">
      <div class="info-panel-body">
        <h2><%= Share.all.count %></h2> <h5><%= 'share'.pluralize(Share.all.count) %></h5>
      </div>
      <div class="info-panel-actions">
        <%= link_to 'Details &raquo;'.html_safe, shares_path, :class => 'white-text' %>
      </div>
    </div>
  </div>

  <div class="four columns">
    <div class="info-panel info-panel-color-3">
      <div class="info-panel-body">
        <h2><%= number_to_human_size(Share.sum(:size)).split(' ')[0] %></h2> <h5><%= number_to_human_size(Share.sum(:size)).split(' ')[1] %> total</h5>
      </div>
      <div class="info-panel-actions">
        <%= link_to 'Recalculate &raquo;'.html_safe, usage_path, :method => :post, :class => 'white-text' %>
      </div>
    </div>
  </div>
</div>
