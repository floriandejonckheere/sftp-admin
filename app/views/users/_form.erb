<%= form_for @user do |u| %>
  <% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="one column">
      <strong>Name</strong>
    </div>
    <div class="four columns">
      <%= u.text_field :name,
        :placeholder => :name,
        :required => 'true',
        :class => 'u-full-width' %>
    </div>
  </div>

  <div class="row">
    <div class="one column">
      <strong>Email</strong>
    </div>
    <div class="four columns">
      <%= u.email_field :email,
        :placeholder => :name,
        :required => 'true',
        :class => 'u-full-width' %>
    </div>
  </div>

  <div class="row">
    <%= u.submit 'Save',
            :class => "btn btn-success" %>
  </div>
<% end %>
