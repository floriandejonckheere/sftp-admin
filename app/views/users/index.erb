<%= link_to 'Add', new_user_path, :class => 'u-pull-right button button-primary' %>
<h4>Users</h4>

<hr>

<% if @users.any? %>
  <table class="u-full-width">
    <thead>
      <th>Username</th>
      <th>Email</th>
      <th class="u-align-right">Actions</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name.capitalize, user_path(user) %></td>
        <td><%= user.email %></td>
        <td class="u-align-right">
          <%= link_to 'Delete', user_path(user),
                          :method => :delete,
                          data: { confirm: 'Are you sure?' }, :class => 'button button-danger button-small' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<em>No users were found</em>
<% end %>
